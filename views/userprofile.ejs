<html>
    <%- include("./partials/head.ejs") %>
    <body>
        <!-- navigation-->
        <%- include("./partials/nav.ejs") %>
        <div class="container" style="height:365px;">
            <div class="row m-3">  
             <form class="col-sm-10 offset-sm" method="POST" action="/<%= profiledata._id %>">
                <div class="row">
                    <h3 class="col-sm-9 text-info mt-2 mb-2">Profile</h3>
                    <span class="col-sm-3 btn-group">
                        <button type="submit" class="btn btn-success" data-doc="<%= profiledata._id%>">Update</button>
                        <a role="button" class="btn btn-dark" href="/secret">Cancel</a> 
                    </span>  
                </div>    
                <input type="hidden" value="<%= profiledata._id%>"/>
                <div class="form-group"><label class="form-label text-light" for="name">Name</label><input class="form-control text-dark" id="name" type="text" name="name" value="<%= profiledata.name %>"></div>
                <div class="form-group"><label class="form-label text-light" for="email">Email</label><input class="form-control text-dark" id="email" type="text" name="email" value="<%= profiledata.email %>"></div>
                <div class="form-group"><label class="form-label text-light" for="phonenumber">PhoneNumber</label><input class="form-control text-dark" id="phonenumber" type="tel" name="phonenumber" value="<%= profiledata.phonenumber %>"></div>
            </form>
            </div>
        </div>
        <%- include("./partials/footer.ejs") %>
        
    </body>
</html>
